{
	"name": "Dron Daper",
	"version": "1.0",
	"description": "Block those pesky google ads",
	"permissions": ["tabs", "*://*.google.com/*", "activeTab", "declarativeContent", "storage"],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"content_scripts": [{ "matches": ["*://*.google.com/*"], "js": ["dron-daper.js"] }],
	"icons": {
		"16": "images/dron-daper16.png",
		"32": "images/dron-daper32.png",
		"48": "images/dron-daper48.png",
		"128": "images/dron-daper128.png"
	},
	"page_action": {
		"default_popup": "popup.html"
	},
	"manifest_version": 2
}
